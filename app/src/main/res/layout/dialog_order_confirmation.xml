<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFBB33"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:layout_marginBottom="30dp"
        android:src="@drawable/cake" />


    <androidx.cardview.widget.CardView
        android:id="@+id/home_addToCart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <Button
                android:id="@+id/menu_st_likebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_ordercheckicon"
                android:backgroundTint="@color/buttonRed"
                android:theme="@style/GreenBtn"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/section_show_all_button"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/montserrat_bold"
        android:includeFontPadding="false"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:text="Thank you for  your Order!"
        android:textColor="#000"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/section_label_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/montserrat"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:gravity="center"
        android:text="Your meal order has been placed successfully. We are currently processing it now and you will get a call to confirm your order."
        android:textColor="@color/light_black"
        android:textSize="14sp" />





</LinearLayout>