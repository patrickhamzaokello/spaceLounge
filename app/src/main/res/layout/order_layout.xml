<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00000000"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/order_layout_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
       >



        <TextView
            android:id="@+id/order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="2"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/order_date"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserrat_bold"
            tools:text="Order No: ZodongoRM34" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_grey"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/montserrat"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="05 07 2022" />

        <TextView
            android:id="@+id/order_tracking_lable"
            android:layout_below="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/light_grey"
            android:fontFamily="@font/montserrat"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Tracking No:" />

        <TextView
            android:id="@+id/order_tracking_no"
            android:layout_toRightOf="@id/order_tracking_lable"
            android:layout_below="@+id/order_no"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="UMKK34099112" />


        <TextView
            android:id="@+id/order_total_label"
            android:layout_below="@+id/order_tracking_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/light_grey"
            android:fontFamily="@font/montserrat"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Total Amount:" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_toRightOf="@id/order_total_label"
            android:layout_below="@+id/order_tracking_lable"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/montserrat_bold"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="UGX 34,600" />




        <TextView
            android:id="@+id/order_address"
            android:layout_below="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/profilecards"
            android:fontFamily="@font/montserrat"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            tools:text="Address: Lira, Adyel 0787250196"
            />


        <TextView
            android:id="@+id/order_status_lable"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/order_status"
            android:layout_below="@+id/order_address"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:textColor="@color/light_grey"
            android:text="Status" />




        <TextView
            android:id="@+id/order_status"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="8dp"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/order_address"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/niceGreen"
            tools:text="Delivered" />







    </RelativeLayout>




</androidx.cardview.widget.CardView>