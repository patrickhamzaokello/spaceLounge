<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rootbg"
    tools:context=".Fragments.Profile"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/purple_200"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_profile_card_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/zodongo_user_profile" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_profile_card_view"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="Patrick Hamza"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/full_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_profile_card_view"

                android:includeFontPadding="false"
                android:text="Pkasemer"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/image_profile_card_view"
                android:includeFontPadding="false"
                android:text="Lira, Adyel"
                android:textColor="@color/white"
                android:textSize="10sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:padding="20dp">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:id="@+id/manageOrders"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/profilecards"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp">



                    <TextView
                        android:id="@+id/wallet_labels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:includeFontPadding="false"
                        android:text="Orders"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/wallet_descs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wallet_labels"
                        android:fontFamily="@font/montserrat"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:text="Monitor and Track all Your Orders Here"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/profilecards"
                app:cardCornerRadius="5dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="5dp">



                    <TextView
                        android:id="@+id/wallet_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:includeFontPadding="false"
                        android:text="Wallet"
                        android:textColor="@color/white"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/wallet_credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wallet_labels"
                        android:fontFamily="@font/montserrat"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:includeFontPadding="false"
                        android:text="Manage all your accumulated Points"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/welcome_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/hello_usertext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Earn Points by Ordering Food from us"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:transitionName="logo_text"

                        />

                    <TextView
                        android:id="@+id/what_they_eat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hello_usertext"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:text="Get free Points anytime you make an order with us. you can use your points to pay for your next order at any zodongo Restuarant."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:transitionName="logo_desc" />


                    <Button
                        android:id="@+id/cardclosebutton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/custom_btn_close"
                        android:theme="@style/Closebutton" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="Account Profile Details"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:text="2/2 Complete"
                android:textColor="@color/light_grey"
                android:textSize="12sp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#00000000"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:id="@+id/fullnamelable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Full Name"
                        android:textColor="@color/light_grey"
                        android:textSize="12sp"
                        android:transitionName="logo_text"

                        />

                    <TextView
                        android:id="@+id/full_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:text="Patrick Okello"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:transitionName="logo_desc" />

                    <TextView
                        android:id="@+id/card_email_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Email"
                        android:textColor="@color/light_grey"
                        android:textSize="12sp"
                        android:transitionName="logo_text"

                        />

                    <TextView
                        android:id="@+id/card_email_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:text="pkasemer@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:transitionName="logo_desc" />

                    <TextView
                        android:id="@+id/card_address_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Location Address"
                        android:textColor="@color/light_grey"
                        android:textSize="12sp"
                        android:transitionName="logo_text"

                        />

                    <TextView
                        android:id="@+id/card_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:text="Oyite Ojok, Lira"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:transitionName="logo_desc" />

                    <TextView
                        android:id="@+id/card_phone_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="Phone"
                        android:textColor="@color/light_grey"
                        android:textSize="12sp"
                        android:transitionName="logo_text"

                        />

                    <TextView
                        android:id="@+id/card_phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:includeFontPadding="false"
                        android:text="+257-787250196"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:transitionName="logo_desc" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/purple_200"
                android:fontFamily="@font/montserrat_bold"
                android:text="Logout" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>